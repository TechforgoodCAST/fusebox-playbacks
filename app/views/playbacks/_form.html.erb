<%= simple_form_for playback do |f| %>
  <%= f.input :organisation_name %>
  <%= f.input :project_name %>
  <%= f.input :author_name %>
  <%= f.input :period %>
  <%= f.input :logo_url %>
  <%= f.input :description %>
  <%= f.input :notes %>

  <div id="sections">
    <%= f.simple_fields_for :sections do |section| %>
      <%= render 'section_fields', f: section %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'add section', f, :sections %>
    </div>
  </div>

  <%= f.button :submit %>
<% end %>