<div class="maxw1050 mx-auto px15">
  <p id="notice"><%= notice %></p>

  <h1 class="h2 bold my40">Playbacks</h1>

  <p class="mb20"><%= link_to 'New Playback', new_playback_path, class: 'btn' %><p>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Organisation Name</th>
        <th>Period</th>
        <th>Updated At</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @playbacks.each do |playback| %>
        <tr>
          <td><%= playback.id %></td>
          <td><%= playback.organisation_name %></td>
          <td><%= playback.period %></td>
          <td><%= playback.updated_at.strftime("%d %b %Y, %H:%M:%S") %></td>
          <td><%= link_to 'View', playback %></td>
          <td><%= link_to 'Edit', edit_playback_path(playback) %></td>
          <td><%= link_to 'Destroy', playback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>